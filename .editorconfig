# Adapted from <https://github.com/rust-lang/rust/blob/master/.editorconfig>

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
# Fairly high because we have many URLs in doc comments
max_line_length = 200

[*.md]
# double whitespace at end of line
# denotes a line break in Markdown
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yarn]
trim_trailing_whitespace = false
